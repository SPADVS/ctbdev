{% doc %}
  @prompt
    a splide slider with auto slider on
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-splide-slider-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    position: relative;
  }

  @media (min-width: 750px) {
    .ai-splide-slider-{{ ai_gen_id }} {
      width: {{ block.settings.desktop_width_percent }}%;
    }
  }

  .ai-splide-slider-container-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-splide-slider-wrapper-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-splide-slider-heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_spacing }}px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
  }

  .ai-splide-{{ ai_gen_id }} {
    visibility: hidden;
  }

  .ai-splide-{{ ai_gen_id }}.is-initialized {
    visibility: visible;
  }

  .ai-splide-{{ ai_gen_id }} .splide__track {
    overflow: hidden;
  }

  .ai-splide-{{ ai_gen_id }} .splide__list {
    display: flex;
  }

  .ai-splide-{{ ai_gen_id }} .splide__slide {
    flex-shrink: 0;
  }

  .ai-splide-slide-content-{{ ai_gen_id }} {
    background-color: {{ block.settings.slide_background }};
    border-radius: {{ block.settings.slide_border_radius }}px;
    overflow: hidden;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .ai-splide-slide-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: {{ block.settings.image_aspect_ratio }}%;
    overflow: hidden;
  }

  .ai-splide-slide-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-splide-slide-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-splide-slide-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
  }

  .ai-splide-slide-text-{{ ai_gen_id }} {
    padding: {{ block.settings.slide_padding }}px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .ai-splide-slide-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.slide_title_size }}px;
    color: {{ block.settings.slide_text_color }};
    margin: 0;
  }

  .ai-splide-slide-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.slide_description_size }}px;
    color: {{ block.settings.slide_text_color }};
    line-height: 1.5;
  }

  .ai-splide-{{ ai_gen_id }} .splide__arrows {
    display: none;
  }

  @media (min-width: 750px) {
    .ai-splide-{{ ai_gen_id }} .splide__arrows {
      display: block;
    }
  }

  .ai-splide-{{ ai_gen_id }} .splide__arrow {
    background-color: {{ block.settings.arrow_background }};
    border: none;
    width: {{ block.settings.arrow_size }}px;
    height: {{ block.settings.arrow_size }}px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    opacity: 1;
    transition: opacity 0.3s ease;
  }

  .ai-splide-{{ ai_gen_id }} .splide__arrow:hover {
    opacity: 0.8;
  }

  .ai-splide-{{ ai_gen_id }} .splide__arrow svg {
    width: 50%;
    height: 50%;
    fill: {{ block.settings.arrow_color }};
  }

  .ai-splide-{{ ai_gen_id }} .splide__arrow--prev {
    left: {{ block.settings.arrow_offset }}px;
  }

  .ai-splide-{{ ai_gen_id }} .splide__arrow--next {
    right: {{ block.settings.arrow_offset }}px;
  }

  .ai-splide-{{ ai_gen_id }} .splide__pagination {
    bottom: -{{ block.settings.pagination_spacing }}px;
    padding: 0;
  }

  .ai-splide-{{ ai_gen_id }} .splide__pagination__page {
    background-color: {{ block.settings.pagination_color }};
    border: none;
    width: {{ block.settings.pagination_size }}px;
    height: {{ block.settings.pagination_size }}px;
    margin: 0 4px;
    opacity: 0.3;
    transition: opacity 0.3s ease;
  }

  .ai-splide-{{ ai_gen_id }} .splide__pagination__page.is-active {
    opacity: 1;
    transform: scale(1);
  }
{% endstyle %}

<splide-slider-{{ ai_gen_id }} class="ai-splide-slider-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-splide-slider-container-{{ ai_gen_id }}">
    <div class="ai-splide-slider-wrapper-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-splide-slider-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}

      <div class="splide ai-splide-{{ ai_gen_id }}">
        <div class="splide__track">
          <ul class="splide__list">
            {% for i in (1..6) %}
              {% liquid
                assign image_key = 'slide_' | append: i | append: '_image'
                assign title_key = 'slide_' | append: i | append: '_title'
                assign description_key = 'slide_' | append: i | append: '_description'
                
                assign slide_image = block.settings[image_key]
                assign slide_title = block.settings[title_key]
                assign slide_description = block.settings[description_key]
              %}

              <li class="splide__slide">
                <div class="ai-splide-slide-content-{{ ai_gen_id }}">
                  <div class="ai-splide-slide-image-wrapper-{{ ai_gen_id }}">
                    {% if slide_image %}
                      <img
                        src="{{ slide_image | image_url: width: 800 }}"
                        alt="{{ slide_image.alt | escape }}"
                        class="ai-splide-slide-image-{{ ai_gen_id }}"
                        loading="lazy"
                        width="800"
                        height="{{ 800 | times: block.settings.image_aspect_ratio | divided_by: 100 }}"
                      >
                    {% else %}
                      <div class="ai-splide-slide-image-placeholder-{{ ai_gen_id }}">
                        {{ 'image' | placeholder_svg_tag }}
                      </div>
                    {% endif %}
                  </div>
                  
                  {% if slide_title != blank or slide_description != blank %}
                    <div class="ai-splide-slide-text-{{ ai_gen_id }}">
                      {% if slide_title != blank %}
                        <h3 class="ai-splide-slide-title-{{ ai_gen_id }}">{{ slide_title }}</h3>
                      {% endif %}
                      {% if slide_description != blank %}
                        <div class="ai-splide-slide-description-{{ ai_gen_id }}">{{ slide_description }}</div>
                      {% endif %}
                    </div>
                  {% endif %}
                </div>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </div>
</splide-slider-{{ ai_gen_id }}>

<script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/css/splide.min.css">

<script>
  (function() {
    class SplideSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.splide = null;
      }

      connectedCallback() {
        this.initSlider();
      }

      initSlider() {
        const splideElement = this.querySelector('.ai-splide-{{ ai_gen_id }}');
        
        if (!splideElement || typeof Splide === 'undefined') {
          setTimeout(() => this.initSlider(), 100);
          return;
        }

        this.splide = new Splide(splideElement, {
          type: '{{ block.settings.slider_type }}',
          perPage: {{ block.settings.slides_per_page }},
          perMove: {{ block.settings.slides_per_move }},
          gap: '{{ block.settings.slide_gap }}px',
          autoplay: {{ block.settings.autoplay }},
          interval: {{ block.settings.autoplay_interval }},
          pauseOnHover: {{ block.settings.pause_on_hover }},
          pauseOnFocus: {{ block.settings.pause_on_focus }},
          speed: {{ block.settings.transition_speed }},
          arrows: {{ block.settings.show_arrows }},
          pagination: {{ block.settings.show_pagination }},
          drag: {{ block.settings.enable_drag }},
          breakpoints: {
            749: {
              perPage: {{ block.settings.slides_per_page_mobile }},
              gap: '{{ block.settings.slide_gap_mobile }}px',
              arrows: false,
            }
          }
        });

        this.splide.mount();
      }

      disconnectedCallback() {
        if (this.splide) {
          this.splide.destroy();
        }
      }
    }

    customElements.define('splide-slider-{{ ai_gen_id }}', SplideSlider{{ ai_gen_id }});
  })();
</script>

