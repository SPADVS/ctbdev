        delay: {{ section.settings.popup_delay | default: 2 }} * 1000,
        showOnExitIntent: {{ section.settings.show_on_exit_intent }},
        showOnScroll: {{ section.settings.show_on_scroll }},
        scrollPercentage: {{ section.settings.scroll_percentage | default: 50 }},
        frequency: '{{ section.settings.frequency | default: "once_per_session" }}',
        pauseOnHover: {{ section.settings.pause_on_hover | default: true }},
        autoCloseDelay: {{ section.settings.auto_close_delay | default: 0 }} * 1000
    };
    
    // Cookie/localStorage helpers
    function getCookie(name) {
        var parts = document.cookie.split('; ');
        for (var i = 0; i < parts.length; i++) {
            var row = parts[i];
            if (row.indexOf(name + '=') === 0) {
                return decodeURIComponent(row.substring(name.length + 1));
            }
        }
        return null;
    }
    
    function setCookie(name, value, days) {
        var expires = '';
        if (days) {
            var date = new Date();
            date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
            expires = '; expires=' + date.toUTCString();
        }
        document.cookie = name + '=' + encodeURIComponent(value) + expires + '; path=/; SameSite=Lax';
    }

    function deleteCookie(name) {
        document.cookie = name + '=; expires=Thu, 01 Jan 1970 00:00:00 GMT; path=/; SameSite=Lax';
    }
    
    function shouldShowPopup() {
        var lastShown = getCookie('popup_last_shown');
        var sessionShown = sessionStorage.getItem('popup_shown');
        
        if (popupSettings.frequency === 'always') {
            return true;
        } else if (popupSettings.frequency === 'once_per_session') {
            return !sessionShown;
        } else if (popupSettings.frequency === 'once_per_day') {
            if (!lastShown) return true;
            var dayAgo = Date.now() - (24 * 60 * 60 * 1000);
            return parseInt(lastShown) < dayAgo;
        } else if (popupSettings.frequency === 'once_per_week') {
            if (!lastShown) return true;
            var weekAgo = Date.now() - (7 * 24 * 60 * 60 * 1000);
            return parseInt(lastShown) < weekAgo;
        }
        return true;
    }
    
    function markPopupShown() {
        sessionStorage.setItem('popup_shown', 'true');
        setCookie('popup_last_shown', Date.now().toString(), 365);
    }

    var originalScrollY = 0;
    var isBodyFixed = false;
    var activePopups = {{ section.blocks.size }};
    var popupsQueue = [{% for block in section.blocks %}'popup-{{ forloop.index }}'{% unless forloop.last %}, {% endunless %}{% endfor %}];
    var autoCloseTimer = null;
    var hasTriggered = false;

    console.log('[Popup] Initial activePopups:', activePopups);
    console.log('[Popup] Initial popupsQueue:', popupsQueue);

    if ({{ section.settings.show_email_popup | json }}) {
        popupsQueue.push('emailSignupPopup');
        activePopups++;
        console.log('[Popup] Email popup added to queue');
    }

    // Ashley after purchase popup integration (Smash)
    var shouldQueueAshley = false;
    var dvsArtist = getCookie('dvs_last_artist');

    console.log('[Popup] Checking Ashley cookie, dvsArtist:', dvsArtist);

    if (dvsArtist && dvsArtist.toLowerCase() === 'ashley') {
        shouldQueueAshley = true;
        deleteCookie('dvs_last_artist');
        console.log('[Popup] Ashley popup triggered by cookie');
    }

    // Dev query param to force Ashley popup:
    // use ?ashley_debug=1 on the URL
    try {
        var urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get('ashley_debug') === '1') {
            shouldQueueAshley = true;
            console.log('[Popup] Ashley debug query detected, forcing popup');
        }
    } catch (e) {
        console.warn('[Popup] URLSearchParams not available', e);
    }

    if (shouldQueueAshley) {
        popupsQueue.unshift('ashleyBookingPopup');
        activePopups++;
        console.log('[Popup] Ashley booking popup queued');
    }

    console.log('[Popup] Final popupsQueue:', popupsQueue);
    console.log('[Popup] Final activePopups:', activePopups);

    function updateAnnouncementCount() {
        console.log('[Popup] Updating announcement count, activePopups:', activePopups);
        if (activePopups > 0) {
            document.getElementById('announcementCount').textContent = activePopups;
            // Hide announcement counter if Ashley popup is showing
            if (shouldQueueAshley) {
                document.querySelector('.announcement-counter').style.display = 'none';
            } else {
                document.querySelector('.announcement-counter').style.display = 'block';
            }
        } else {
            document.querySelector('.announcement-counter').style.display = 'none';
        }
    }

    function hideLoyaltyButton() {
        var loyaltyButton = document.getElementById('bon-loyalty-btn');
        if (loyaltyButton) {
            loyaltyButton.style.display = 'none';
            console.log('[Popup] Loyalty button hidden');
        }
    }

    function showLoyaltyButton() {
        var loyaltyButton = document.getElementById('bon-loyalty-btn');
        if (loyaltyButton) {
            loyaltyButton.style.display = 'flex';
            console.log('[Popup] Loyalty button shown');
        }
    }

    function showPopup(popupId) {
        console.log('[Popup] showPopup called with popupId:', popupId);
        
        document.querySelectorAll('.image-popup').forEach(function(popup) {
            popup.style.visibility = 'hidden';
        });

        if (!isBodyFixed) {
            console.log('[Popup] Setting body to fixed, hiding scrollbar');
            originalScrollY = window.scrollY;
            document.body.style.position = 'fixed';
            document.body.style.top = '-' + originalScrollY + 'px';
            document.body.style.width = '100%';
            var backdrop = document.getElementById('backdrop');
            backdrop.style.display = 'block';
            console.log('[Popup] Backdrop displayed');
            // Trigger backdrop animation
            setTimeout(function() {
                backdrop.classList.add('active');
                console.log('[Popup] Backdrop active class added');
            }, 10);
            var siteHeader = document.querySelector('.site-header');
            if (siteHeader) {
                siteHeader.style.display = 'none';
                console.log('[Popup] Site header hidden');
            }
            hideLoyaltyButton();
            isBodyFixed = true;
        }

        var popup = document.getElementById(popupId);
        if (!popup) {
            console.error('[Popup] Popup element not found:', popupId);
            return;
        }
        console.log('[Popup] Popup element found:', popupId);
        popup.style.visibility = 'visible';
        popup.classList.add('visible');
        console.log('[Popup] Popup visible class added');

        if (popup.querySelector('.slider') &&
            typeof jQuery !== 'undefined' &&
            typeof jQuery.fn.slick === 'function') {
            jQuery(popup).find('.slider').not('.slick-initialized').slick({
                initialSlide: 0,
                slidesToShow: 1,
                slidesToScroll: 1,
                dots: true,
                arrows: false,
                autoplay: true,
                autoplaySpeed: 3000
            });
        }

        // Auto redirect when Ashley popup shows
        if (popupId === 'ashleyBookingPopup') {
            console.log('[Popup] Ashley popup shown, starting countdown');
            var igUrl = popup.getAttribute('data-ig-url');
            if (igUrl) {
                var countdown = 4;
                var countdownElement = document.getElementById('ashleyCountdown');
                
                var countdownInterval = setInterval(function() {
                    countdown--;
                    if (countdownElement) {
                        countdownElement.textContent = countdown;
                    }
                    if (countdown <= 0) {
                        clearInterval(countdownInterval);
                    }
                }, 1000);
                
                setTimeout(function() {
                    console.log('[Popup] Redirecting to Instagram:', igUrl);
                    window.location.href = igUrl;
                }, 4000);
            } else {
                console.warn('[Popup] Ashley popup missing Instagram URL');
            }
        }

        updateAnnouncementCount();
    }

    function closePopup(popupId) {
        console.log('[Popup] closePopup called with popupId:', popupId);
        
        // Clear auto-close timer if exists
        if (autoCloseTimer) {
            clearTimeout(autoCloseTimer);
            autoCloseTimer = null;
        }
        
        var popup = document.getElementById(popupId);
        if (popup) {
            popup.classList.remove('visible');
            popup.style.visibility = 'hidden';
            console.log('[Popup] Popup closed:', popupId);
        }
        activePopups--;
        updateAnnouncementCount();

        if (activePopups > 0 &&
            popupId !== 'thankYouPopup' &&
            popupId !== 'emailSignupPopup') {
            console.log('[Popup] Showing next popup in queue');
            showPopup(popupsQueue[popupsQueue.length - activePopups]);
        }

        if (activePopups === 0 ||
            popupId === 'thankYouPopup' ||
            popupId === 'emailSignupPopup') {
            console.log('[Popup] Restoring page state');
            var backdrop = document.getElementById('backdrop');
            backdrop.classList.remove('active');
            setTimeout(function() {
                backdrop.style.display = 'none';
            }, 400);
            document.body.style.position = '';
            document.body.style.top = '';
            document.body.style.width = '';
            window.scrollTo(0, originalScrollY);
            var siteHeader = document.querySelector('.site-header');
            if (siteHeader) {
                siteHeader.style.display = 'block';
            }
            showLoyaltyButton();
            isBodyFixed = false;
        }
    }

    document.querySelectorAll('.close-btn').forEach(function(button) {
        button.addEventListener('click', function() {
            closePopup(button.closest('.image-popup').id);
        });
    });
    console.log('[Popup] Close button listeners attached');

    var shopNowBtn = document.getElementById('shopNowBtn');
    if (shopNowBtn) {
        shopNowBtn.addEventListener('click', function() {
            closePopup('thankYouPopup');
        });
        console.log('[Popup] Shop now button listener attached');
    }

    if (window.location.href.indexOf('form_type=customer#contact_form') > -1) {
        console.log('[Popup] Form submission detected, showing thank you popup');
        document.querySelector('.announcement-counter').style.opacity = '0';
        showPopup('thankYouPopup');
    } else if (window.location.href.indexOf('?email') > -1) {
        console.log('[Popup] Email query detected, showing email popup');
        document.querySelector('.announcement-counter').style.opacity = '0';
        showPopup('emailSignupPopup');
    } else {
        // Check if popup should be shown based on frequency settings
        if (!shouldShowPopup()) {
            console.log('[Popup] Popup blocked by frequency settings');
            return;
        }
        
        // Exit intent logic
        if (popupSettings.showOnExitIntent && !hasTriggered) {
            document.addEventListener('mouseout', function(e) {
                if (!e.toElement && !e.relatedTarget && !hasTriggered) {
                    console.log('[Popup] Exit intent detected');
                    hasTriggered = true;
                    document.querySelector('.announcement-counter').style.opacity = '0';
                    if (popupsQueue.length > 0) {
                        showPopup(popupsQueue[0]);
                    }
                }
            });
        }
        
        // Scroll trigger logic
        if (popupSettings.showOnScroll && !hasTriggered) {
            var scrollTriggered = false;
            window.addEventListener('scroll', function() {
                if (scrollTriggered || hasTriggered) return;
                
                var scrollHeight = document.documentElement.scrollHeight - window.innerHeight;
                var scrolled = (window.scrollY / scrollHeight) * 100;
                
                if (scrolled >= popupSettings.scrollPercentage) {
                    console.log('[Popup] Scroll threshold reached:', scrolled + '%');
                    scrollTriggered = true;
                    hasTriggered = true;
                    document.querySelector('.announcement-counter').style.opacity = '0';
                    if (popupsQueue.length > 0) {
                        showPopup(popupsQueue[0]);
                    }
                }
            });
        }
        
        // Default: Show Ashley popup instantly, other popups with delay
        if (!popupSettings.showOnExitIntent && !popupSettings.showOnScroll) {
            if (shouldQueueAshley) {
                console.log('[Popup] Showing Ashley popup immediately');
                document.querySelector('.announcement-counter').style.opacity = '0';
                if (popupsQueue.length > 0) {
                    showPopup(popupsQueue[0]);
                }
            } else {
                console.log('[Popup] Showing popup after delay:', popupSettings.delay + 'ms');
                document.querySelector('.announcement-counter').style.opacity = '1';
                window.setTimeout(function() {
                    if (popupsQueue.length > 0 && !hasTriggered) {
                        hasTriggered = true;
                        showPopup(popupsQueue[0]);
                    }
                }, popupSettings.delay);
            }
        }
    }
});
</script>

</div>
