{% schema %}
{
  "name": "Popups",
  "settings": [
    {
      "type": "header",
      "content": "General Settings"
    },
    {
      "type": "checkbox",
      "id": "hide_in_theme_editor",
      "label": "Hide popups in Shopify theme editor (Design Mode)",
      "default": true
    },
    {
      "type": "header",
      "content": "Popup Timing & Behavior"
    },
    {
      "type": "range",
      "id": "popup_delay",
      "label": "Popup delay (seconds)",
      "min": 0,
      "max": 30,
      "step": 1,
      "default": 2,
      "info": "How long to wait before showing the first popup"
    },
    {
      "type": "checkbox",
      "id": "show_on_exit_intent",
      "label": "Show on exit intent",
      "default": false,
      "info": "Display popup when user tries to leave the page"
    },
    {
      "type": "checkbox",
      "id": "show_on_scroll",
      "label": "Show on scroll",
      "default": false,
      "info": "Display popup when user scrolls a certain amount"
    },
    {
      "type": "range",
      "id": "scroll_percentage",
      "label": "Scroll percentage to trigger",
      "min": 10,
      "max": 90,
      "step": 10,
      "unit": "%",
      "default": 50,
      "info": "Show popup after scrolling this percentage of the page"
    },
    {
      "type": "select",
      "id": "frequency",
      "label": "Show frequency",
      "options": [
        {
          "value": "always",
          "label": "Every visit"
        },
        {
          "value": "once_per_session",
          "label": "Once per browser session"
        },
        {
          "value": "once_per_day",
          "label": "Once per day"
        },
        {
          "value": "once_per_week",
          "label": "Once per week"
        }
      ],
      "default": "once_per_session",
      "info": "How often to show popups to returning visitors"
    },
    {
      "type": "checkbox",
      "id": "pause_on_hover",
      "label": "Pause auto-close on hover",
      "default": true,
      "info": "Pause auto-close timer when user hovers over popup"
    },
    {
      "type": "range",
      "id": "auto_close_delay",
      "label": "Auto-close delay (seconds)",
      "min": 0,
      "max": 60,
      "step": 5,
      "default": 0,
      "info": "Automatically close popup after this time (0 = never)"
    },
    {
      "type": "header",
      "content": "Email Signup Popup"
    },
    {
      "type": "checkbox",
      "id": "show_email_popup",
      "label": "Show Email Signup Popup",
      "default": false
    },
    {
      "type": "text",
      "id": "email_popup_title",
      "label": "Email Popup Title",
      "default": "Get 5% Off The Whole Shop!"
    },
    {
      "type": "textarea",
      "id": "email_popup_text",
      "label": "Email Popup Text",
      "default": "Sign up for our newsletter and get 5% off your entire order. Stay updated with our latest promotions and offers."
    },
    {
      "type": "text",
      "id": "email_popup_placeholder",
      "label": "Email Placeholder Text",
      "default": "Email"
    },
    {
      "type": "text",
      "id": "email_popup_button_text",
      "label": "Email Popup Button Text",
      "default": "Get More Deals"
    },
    {
      "type": "text",
      "id": "email_popup_button_url",
      "label": "Email Popup Button URL",
      "default": "/"
    },
    {
      "type": "textarea",
      "id": "email_popup_disclaimer",
      "label": "Email Popup Disclaimer Text",
      "default": "Excludes already discounted items. Cannot be combined with other promotions."
    }
  ],
  "blocks": [
    {
      "type": "popup",
      "name": "Popup",
      "settings": [
        {
          "type": "image_picker",
          "id": "popup_image",
          "label": "Popup Image"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Book Now"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL",
          "default": "/"
        },
        {
          "type": "text",
          "id": "popup_subtext",
          "label": "Popup Subtext",
          "default": "Optional subtext"
        },
        {
          "type": "checkbox",
          "id": "enable_slider",
          "label": "Enable Slider",
          "default": false
        },
        {
          "type": "image_picker",
          "id": "slide_image_1",
          "label": "Slide Image 1"
        },
        {
          "type": "image_picker",
          "id": "slide_image_2",
          "label": "Slide Image 2"
        },
        {
          "type": "image_picker",
          "id": "slide_image_3",
          "label": "Slide Image 3"
        },
        {
          "type": "image_picker",
          "id": "slide_image_4",
          "label": "Slide Image 4"
        },
        {
          "type": "image_picker",
          "id": "slide_image_5",
          "label": "Slide Image 5"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Popups"
    }
  ]
}
{% endschema %}

{% assign in_editor = request.design_mode %}
{% unless in_editor and section.settings.hide_in_theme_editor %}

<div class="popup-section-wrapper">
<div id="backdrop" class="backdrop"></div>
<div class="announcement-counter">Announcements: <span id="announcementCount">{{ section.blocks.size }}</span></div>

{% for block in section.blocks %}
  <div id="popup-{{ forloop.index }}" class="image-popup">
    <span class="close-btn">×</span>
    <div class="image-content-wrapper">
      {% if block.settings.enable_slider %}
        <div class="slider-instructions">
          <p>Swipe for more info</p>
          <div class="arrow"></div>
        </div>
      {% endif %}
      <div class="image-container {% if block.settings.enable_slider %}slider{% endif %}">
        {% if block.settings.enable_slider %}
          {% if block.settings.slide_image_1 != blank %}
            <div><img src="{{ block.settings.slide_image_1 | img_url: '1024x1024' }}" alt="slide image 1"></div>
          {% endif %}
          {% if block.settings.slide_image_2 != blank %}
            <div><img src="{{ block.settings.slide_image_2 | img_url: '1024x1024' }}" alt="slide image 2"></div>
          {% endif %}
          {% if block.settings.slide_image_3 != blank %}
            <div><img src="{{ block.settings.slide_image_3 | img_url: '1024x1024' }}" alt="slide image 3"></div>
          {% endif %}
          {% if block.settings.slide_image_4 != blank %}
            <div><img src="{{ block.settings.slide_image_4 | img_url: '1024x1024' }}" alt="slide image 4"></div>
          {% endif %}
          {% if block.settings.slide_image_5 != blank %}
            <div><img src="{{ block.settings.slide_image_5 | img_url: '1024x1024' }}" alt="slide image 5"></div>
          {% endif %}
        {% else %}
          {% if block.settings.popup_image != blank %}
            <img src="{{ block.settings.popup_image | img_url: '1024x1024' }}" alt="popup image">
          {% endif %}
        {% endif %}
      </div>
    </div>
    <div class="button-wrapper">
      <a href="{{ block.settings.button_url }}" style="text-decoration: none;">
        <button class="btn">{{ block.settings.button_text }}</button>
      </a>
    </div>
    {% if block.settings.popup_subtext != blank %}
      <small class="popup-subtext">{{ block.settings.popup_subtext }}</small>
    {% endif %}
  </div>
{% endfor %}

