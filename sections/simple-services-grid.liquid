{% comment %}
  Simple Services Grid - Grid of service/ticket cards with CTB Garage styling
{% endcomment %}

<style>
.services-section {
    padding: 80px 0;
    background: #000;
}

.services-intro {
    text-align: center;
    font-size: 1.1rem;
    color: #9CA3AF;
    margin-bottom: 60px;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
}

.ticket-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 40px;
    margin-bottom: 60px;
    max-width: 1400px;
    margin-left: auto;
    margin-right: auto;
}

@media (min-width: 1400px) {
    .ticket-grid {
        grid-template-columns: repeat(3, 1fr);
    }
}

.ticket-card {
    background-color: #0a0a0a;
    border-radius: 12px;
    overflow: hidden;
    border: 2px solid {{ section.settings.border_color }};
    box-shadow: 0 4px 20px rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
}

.ticket-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 8px 35px rgba(255, 255, 255, 0.4);
}

.ticket-image {
    width: 100%;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    position: relative;
}

.ticket-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
}

.ticket-card:hover .ticket-image img {
    transform: scale(1.1);
}

.ticket-content {
    padding: 30px;
    text-align: center;
}

.ticket-content h3 {
    font-family: var(--font-heading-family);
    font-size: 1.8rem;
    color: #ffffff;
    margin-bottom: 15px;
    text-transform: uppercase;
    text-shadow: 0 2px 8px rgba(255, 255, 255, 0.3);
}

.ticket-content p {
    color: #9CA3AF;
    line-height: 1.7;
    margin-bottom: 25px;
    font-size: 1.05rem;
}

.ticket-content .btn {
    width: 100%;
    max-width: 250px;
    display: inline-block;
    padding: 12px 24px;
    background: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    border-radius: 4px;
    text-align: center;
    font-weight: 700;
    text-transform: uppercase;
    transition: all 0.3s ease;
}

.ticket-content .btn:hover {
    background: #ffffff;
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(255, 255, 255, 0.4);
}

.view-all-container {
    text-align: center;
    padding: 40px 20px;
}

.cta-text {
    font-size: 1.2rem;
    color: #D1D5DB;
    margin-bottom: 20px;
}

.view-all-container .btn {
    display: inline-block;
    padding: 14px 32px;
    background: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    border-radius: 4px;
    font-weight: 700;
    text-transform: uppercase;
    transition: all 0.3s ease;
}

.view-all-container .btn:hover {
    background: #ffffff;
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(255, 255, 255, 0.4);
}

@media (max-width: 768px) {
    .services-section {
        padding: 60px 0;
    }

    .ticket-grid {
        grid-template-columns: 1fr;
        gap: 30px;
    }
    
    .ticket-image {
        height: 250px;
    }
}
</style>

{% render 'scroll-animation' %}

<section class="services-section">
    <div class="page-width">
        <h2 class="section-title scroll-fade-in">{{ section.settings.section_title }}</h2>
        <p class="services-intro scroll-fade-in" data-scroll-delay="1">{{ section.settings.section_intro }}</p>

        <div class="ticket-grid">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'service_card' %}
                  <div class="ticket-card scroll-fade-in" data-scroll-delay="{{ forloop.index | modulo: 6 }}" {{ block.shopify_attributes }}>
                      <div class="ticket-image">
                          {% if block.settings.card_image %}
                            <img src="{{ block.settings.card_image | image_url: width: 800 }}" alt="{{ block.settings.card_title }}">
                          {% else %}
                            <div style="background: #333; width: 100%; height: 100%;"></div>
                          {% endif %}
                      </div>
                      <div class="ticket-content">
                          <h3>{{ block.settings.card_title }}</h3>
                          <p>{{ block.settings.card_description }}</p>
                          <a href="{{ block.settings.card_link }}" {% if block.settings.open_new_tab %}target="_blank"{% endif %} class="btn">{{ block.settings.button_text }}</a>
                      </div>
                  </div>
              {% endcase %}
            {% endfor %}
        </div>

        {% if section.settings.show_cta %}
          <div class="view-all-container scroll-fade-in">
              <p class="cta-text">{{ section.settings.cta_text }}</p>
              <a href="{{ section.settings.cta_link }}" {% if section.settings.cta_new_tab %}target="_blank"{% endif %} class="btn">{{ section.settings.cta_button_text }}</a>
          </div>
        {% endif %}
    </div>
</section>

