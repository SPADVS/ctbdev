{% stylesheet %}
  .simple-auto-slider {
    background: #0b0b0b;
    padding: 60px 20px;
    color: #f5f5f5;
  }

  .simple-auto-slider__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .simple-auto-slider__title {
    text-align: center;
    font-size: 2.5rem;
    margin: 0 0 2rem 0;
    color: #f5d76e;
    text-transform: uppercase;
  }

  .simple-auto-slider__slide {
    background: #1a1a1a;
    border: 1px solid #2a2a2a;
    border-radius: 12px;
    padding: 3rem 2rem;
    text-align: center;
    min-height: 300px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 1rem;
  }

  .simple-auto-slider__slide h3 {
    color: #f5d76e;
    font-size: 1.5rem;
    margin: 0;
  }

  .simple-auto-slider__slide p {
    color: #c9c9c9;
    font-size: 1.1rem;
    margin: 0;
  }

  .simple-auto-slider__product {
    background: #1a1a1a;
    border: 1px solid #2a2a2a;
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .simple-auto-slider__product:hover {
    border-color: #f5d76e;
    box-shadow: 0 8px 24px rgba(245, 215, 110, 0.1);
  }

  .simple-auto-slider__product-image {
    width: 100%;
    height: 250px;
    object-fit: cover;
    display: block;
  }

  .simple-auto-slider__product-info {
    padding: 2rem 1.5rem;
    text-align: center;
  }

  .simple-auto-slider__product-title {
    color: #f5f5f5;
    font-size: 1.2rem;
    margin: 0 0 0.5rem 0;
    font-weight: 600;
  }

  .simple-auto-slider__product-price {
    color: #f5d76e;
    font-size: 1.4rem;
    margin: 0.5rem 0 1rem 0;
    font-weight: 700;
  }

  .simple-auto-slider__product-button {
    display: inline-block;
    background: #f5d76e;
    color: #0b0b0b;
    padding: 0.75rem 1.5rem;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    font-size: 1rem;
  }

  .simple-auto-slider__product-button:hover {
    background: #fff;
    transform: scale(1.05);
  }

  .simple-auto-slider .splide__pagination__page.is-active {
    background: #f5d76e;
  }

  .simple-auto-slider .splide__arrow {
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .simple-auto-slider .splide__arrow:hover {
    background: #f5d76e;
    border-color: #f5d76e;
  }
{% endstylesheet %}

{% javascript %}
  document.addEventListener('DOMContentLoaded', function() {
    const carousel = document.querySelector('#simple-auto-carousel-{{ section.id }}');
    if (!carousel || typeof Splide === 'undefined') return;

    const splide = new Splide(carousel, {
      type: 'loop',
      perPage: 3,
      gap: '1.5rem',
      autoplay: true,
      interval: 4000,
      pauseOnHover: true,
      breakpoints: {
        1024: { perPage: 2 },
        768: { perPage: 1 }
      }
    });

    splide.mount();
  });
{% endjavascript %}

<section class="simple-auto-slider">
  <div class="simple-auto-slider__container">
    <h2 class="simple-auto-slider__title">{{ section.settings.heading }}</h2>

    <div id="simple-auto-carousel-{{ section.id }}" class="splide">
      <div class="splide__track">
        <ul class="splide__list">
          {% for block in section.blocks %}
            <li class="splide__slide">
              {% if block.type == 'product' %}
                {% assign product = all_products[block.settings.product] %}
                {% if product %}
                  <div class="simple-auto-slider__product">
                    {% if product.featured_image %}
                      <img src="{{ product.featured_image | img_url: '500x500' }}" alt="{{ product.title }}" class="simple-auto-slider__product-image">
                    {% endif %}
                    <div class="simple-auto-slider__product-info">
                      <h3 class="simple-auto-slider__product-title">{{ product.title }}</h3>
                      <div class="simple-auto-slider__product-price">
                        {% if product.on_sale %}
                          <span style="color: #c9c9c9; text-decoration: line-through; font-size: 0.9rem; margin-right: 0.5rem;">{{ product.compare_at_price_max | money }}</span>
                        {% endif %}
                        {{ product.price_min | money }}
                      </div>
                      <a href="{{ product.url }}" class="simple-auto-slider__product-button">View Product</a>
                    </div>
                  </div>
                {% endif %}
              {% else %}
                <div class="simple-auto-slider__slide">
                  <h3>{{ block.settings.title }}</h3>
                  <p>{{ block.settings.description }}</p>
                </div>
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</section>

