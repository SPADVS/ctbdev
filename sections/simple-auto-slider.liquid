{% stylesheet %}
  .simple-auto-slider {
    background: #0b0b0b;
    padding: 60px 20px;
    color: #f5f5f5;
  }

  .simple-auto-slider__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .simple-auto-slider__title {
    text-align: center;
    font-size: 2.5rem;
    margin: 0 0 2rem 0;
    color: #f5d76e;
    text-transform: uppercase;
  }

  .simple-auto-slider__slide {
    background: #1a1a1a;
    border: 1px solid #2a2a2a;
    border-radius: 12px;
    padding: 3rem 2rem;
    text-align: center;
    min-height: 300px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 1rem;
  }

  .simple-auto-slider__slide h3 {
    color: #f5d76e;
    font-size: 1.5rem;
    margin: 0;
  }

  .simple-auto-slider__slide p {
    color: #c9c9c9;
    font-size: 1.1rem;
    margin: 0;
  }

  /* Fallback layout when Splide fails to mount */
  .simple-auto-slider__list:not(.is-mounted) {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .simple-auto-slider__fallback {
    text-align: center;
    color: #c9c9c9;
    padding: 2rem 1rem;
  }

  .simple-auto-slider__product-image {
    width: 100%;
    height: 250px;
    object-fit: cover;
    border-radius: 8px;
    margin-bottom: 1rem;
  }

  .simple-auto-slider__price {
    color: #f5d76e;
    font-size: 1.3rem;
    font-weight: 700;
    margin: 0.5rem 0;
  }

  .simple-auto-slider__btn {
    background: #f5d76e;
    color: #0b0b0b;
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 8px;
    font-weight: 700;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s ease;
    margin-top: 1rem;
  }

  .simple-auto-slider__btn:hover {
    background: #fff;
    transform: scale(1.05);
  }

  .simple-auto-slider .splide__pagination__page.is-active {
    background: #f5d76e;
  }

  /* Ensure Splide becomes visible when mounted */
  .splide.is-initialized {
    visibility: visible;
  }

  .simple-auto-slider .splide__arrow {
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .simple-auto-slider .splide__arrow:hover {
    background: #f5d76e;
    border-color: #f5d76e;
  }
{% endstylesheet %}

{% javascript %}
  function initCarousel(attempt = 1) {
    const carousel = document.querySelector('#simple-auto-carousel-{{ section.id }}');
    const slides = carousel?.querySelectorAll('.splide__slide') || [];

    console.log(`[AutoSlider] Init attempt ${attempt} | carousel:`, !!carousel, '| slides:', slides.length);
    
    if (!carousel) {
      console.warn('[AutoSlider] Carousel element not found');
      return;
    }

    if (typeof Splide === 'undefined') {
      console.warn('[AutoSlider] Splide not loaded yet, retrying...');
      if (attempt < 10) setTimeout(() => initCarousel(attempt + 1), 500);
      return;
    }

    try {
      const splide = new Splide(carousel, {
        type: 'loop',
        perPage: 3,
        gap: '1.5rem',
        autoplay: true,
        interval: 4000,
        pauseOnHover: true,
        breakpoints: {
          1024: { perPage: 2 },
          768: { perPage: 1 }
        }
      });

      splide.mount();
      carousel.querySelector('.simple-auto-slider__list')?.classList.add('is-mounted');
      carousel.classList.add('is-initialized');
      console.log('[AutoSlider] Mounted successfully with', slides.length, 'slides');
    } catch (error) {
      console.error('[AutoSlider] Initialization failed:', error);
    }
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initCarousel);
  } else {
    initCarousel();
  }
{% endjavascript %}

<section class="simple-auto-slider">
  <div class="simple-auto-slider__container">
    <h2 class="simple-auto-slider__title">{{ section.settings.heading }}</h2>

    <div id="simple-auto-carousel-{{ section.id }}" class="splide">
      <div class="splide__track">
        {% if section.blocks.size == 0 %}
          <div class="simple-auto-slider__fallback">Add slides or products to see the carousel here.</div>
        {% else %}
          <ul class="splide__list simple-auto-slider__list">
            {% for block in section.blocks %}
              <li class="splide__slide">
                <div class="simple-auto-slider__slide">
                  {% if block.type == 'product' and block.settings.product != blank %}
                    {% assign product = block.settings.product %}
                    {% if product.featured_image %}
                      <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.title }}" class="simple-auto-slider__product-image">
                    {% endif %}
                    <h3>{{ product.title }}</h3>
                    <div class="simple-auto-slider__price">{{ product.price | money }}</div>
                    <a href="{{ product.url }}" class="simple-auto-slider__btn">View Product</a>
                  {% else %}
                    <h3>{{ block.settings.title }}</h3>
                    <p>{{ block.settings.description }}</p>
                  {% endif %}
                </div>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>
    </div>
  </div>
</section>

