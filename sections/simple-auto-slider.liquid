{% stylesheet %}
  .simple-auto-slider {
    background: #0b0b0b;
    padding: 60px 20px;
    color: #f5f5f5;
  }

  .simple-auto-slider__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .simple-auto-slider__title {
    text-align: center;
    font-size: 2.5rem;
    margin: 0 0 2rem 0;
    color: #f5d76e;
    text-transform: uppercase;
  }

  .simple-auto-slider__slide {
    background: #1a1a1a;
    border: 1px solid #2a2a2a;
    border-radius: 12px;
    padding: 3rem 2rem;
    text-align: center;
    min-height: 300px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 1rem;
  }

  .simple-auto-slider__slide h3 {
    color: #f5d76e;
    font-size: 1.5rem;
    margin: 0;
  }

  .simple-auto-slider__slide p {
    color: #c9c9c9;
    font-size: 1.1rem;
    margin: 0;
  }

  .simple-auto-slider .splide__pagination__page.is-active {
    background: #f5d76e;
  }

  .simple-auto-slider .splide__arrow {
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .simple-auto-slider .splide__arrow:hover {
    background: #f5d76e;
    border-color: #f5d76e;
  }
{% endstylesheet %}

{% javascript %}
  document.addEventListener('DOMContentLoaded', function() {
    const carousel = document.querySelector('#simple-auto-carousel-{{ section.id }}');
    if (!carousel || typeof Splide === 'undefined') return;

    const splide = new Splide(carousel, {
      type: 'loop',
      perPage: 3,
      gap: '1.5rem',
      autoplay: true,
      interval: 4000,
      pauseOnHover: true,
      breakpoints: {
        1024: { perPage: 2 },
        768: { perPage: 1 }
      }
    });

    splide.mount();
  });
{% endjavascript %}

<section class="simple-auto-slider">
  <div class="simple-auto-slider__container">
    <h2 class="simple-auto-slider__title">{{ section.settings.heading }}</h2>

    <div id="simple-auto-carousel-{{ section.id }}" class="splide">
      <div class="splide__track">
        <ul class="splide__list">
          {% for block in section.blocks %}
            <li class="splide__slide">
              <div class="simple-auto-slider__slide">
                <h3>{{ block.settings.title }}</h3>
                <p>{{ block.settings.description }}</p>
              </div>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</section>

