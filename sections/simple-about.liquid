{% render 'scroll-animation' %}

<section class="simple-about" style="background: {{ section.settings.background_color }}; padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px 0;">
  <div class="page-width">
    
    <!-- Section Title -->
    <h2 class="simple-about__section-title scroll-fade-in" style="font-family: var(--font-heading-family); font-size: clamp(2rem, 5vw, 3rem); text-align: center; margin: 0 0 3rem 0; text-transform: uppercase; letter-spacing: 2px; color: {{ section.settings.heading_color }}; position: relative; line-height: 1.2;">
      {{ section.settings.heading }}
    </h2>

    <div class="simple-about__grid" style="display: grid; grid-template-columns: 1fr 1fr; gap: 50px; align-items: center;">
      
      <!-- Content Side -->
      <div class="simple-about__content scroll-fade-in" data-scroll-delay="1">
        <p style="color: {{ section.settings.text_color }}; line-height: 1.7; margin: 0 0 20px 0; font-size: 1.15rem;">
          {{ section.settings.description }}
        </p>

        <!-- Feature List -->
        {% if section.blocks.size > 0 %}
          <ul class="simple-about__features" style="list-style: none; padding: 0; margin: 30px 0 0 0;">
            {% for block in section.blocks %}
              {% if block.type == 'feature' %}
                <li style="margin-bottom: 20px; display: flex; flex-direction: column; gap: 8px;">
                  <span style="color: {{ section.settings.text_color }};">
                    {{ block.settings.title }}{% if block.settings.description != blank %}: {% endif %}{{ block.settings.description }}
                  </span>
                  <i class="fas fa-check" style="color: {{ section.settings.accent_color }}; font-size: 1.2rem; width: 20px;"></i>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        {% endif %}

        <!-- Social handles -->
        {% if section.settings.instagram_handle != blank %}
          <p class="simple-about__social" style="margin: 20px 0; color: {{ section.settings.text_color }};">
            Follow us: <a href="https://www.instagram.com/{{ section.settings.instagram_handle | replace: '@', '' }}/" target="_blank" style="color: {{ section.settings.accent_color }}; text-decoration: none; font-weight: bold;">@{{ section.settings.instagram_handle | replace: '@', '' }}</a>
          </p>
        {% endif %}

        <!-- CTA Button -->
        {% if section.settings.button_text != blank %}
          <div class="simple-about__cta" style="margin-top: 30px;">
            <a href="{{ section.settings.button_link }}" 
               style="display: inline-block; padding: 16px 40px; background: {{ section.settings.accent_color }}; color: #000; font-weight: bold; text-transform: uppercase; border-radius: 4px; text-decoration: none; border: 2px solid {{ section.settings.accent_color }}; transition: all 0.3s; box-shadow: 0 6px 25px rgba(255, 255, 255, 0.2);">
              {{ section.settings.button_text }}
            </a>
          </div>
        {% endif %}
      </div>

      <!-- Image Side with Slider -->
      <div class="simple-about__image scroll-fade-in" data-scroll-delay="2" style="position: relative;">
        {% assign image_blocks = section.blocks | where: 'type', 'image' %}
        {% if image_blocks.size > 1 %}
          <!-- Multiple images = slider -->
          <div class="simple-about-slider splide" aria-label="About gallery" style="border-radius: 8px; overflow: hidden; box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3); border: 1px solid #333;">
            <div class="splide__track">
              <ul class="splide__list">
                {% for block in image_blocks %}
                  {% if block.settings.image != blank %}
                    <li class="splide__slide">
                      <img src="{{ block.settings.image | image_url: width: 800 }}" 
                           alt="{{ block.settings.image.alt | default: 'About image' }}"
                           style="width: 100%; height: 100%; display: block; object-fit: cover; border-radius: 8px;">
                    </li>
                  {% endif %}
                {% endfor %}
              </ul>
            </div>
          </div>
        {% elsif section.settings.single_image != blank %}
          <!-- Single image -->
          <img src="{{ section.settings.single_image | image_url: width: 800 }}" 
               alt="{{ section.settings.single_image.alt | default: section.settings.heading }}"
               style="width: 100%; border-radius: 8px; box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3); border: 1px solid #333; display: block;">
        {% else %}
          <!-- Placeholder -->
          <div style="background: #333; padding: 100px 20px; text-align: center; color: #999; border-radius: 8px;">
            Add images via blocks
          </div>
        {% endif %}
      </div>

    </div>
  </div>
</section>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/css/splide.min.css">
<script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js"></script>

<style>
  .simple-about__section-title::after {
    content: '';
    display: block;
    width: 60px;
    height: 3px;
    background-color: {{ section.settings.accent_color }};
    margin: 15px auto 0;
    box-shadow: 0 2px 10px rgba(255, 255, 255, 0.5);
  }

  .simple-about-slider .splide__pagination {
    bottom: 15px;
  }

  .simple-about-slider .splide__pagination__page {
    background: rgba(255, 255, 255, 0.4);
    width: 10px;
    height: 10px;
  }

  .simple-about-slider .splide__pagination__page.is-active {
    background: {{ section.settings.accent_color }};
    transform: scale(1.2);
  }

  @media (max-width: 768px) {
    .simple-about__grid {
      grid-template-columns: 1fr !important;
      gap: 30px !important;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const slider = document.querySelector('.simple-about-slider');
    if (!slider || typeof Splide === 'undefined') return;

    const splide = new Splide(slider, {
      type: 'fade',
      rewind: true,
      arrows: false,
      pagination: true,
      autoplay: true,
      interval: 4500,
      speed: 800,
      pauseOnHover: true,
    });

    splide.mount();
  });
</script>

