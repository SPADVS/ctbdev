{% comment %}
  Simple Testimonials - Testimonial carousel with Splide (CTB Garage style)
{% endcomment %}

<!-- Splide CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/css/splide.min.css">
<!-- Font Awesome for stars -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
.testimonials-section {
    background-color: #000000;
    padding: 80px 0;
}

.testimonial-card {
    background-color: #0a0a0a;
    padding: 40px;
    border-radius: 8px;
    text-align: center;
    border: 1px solid #333;
    margin: 10px;
    aspect-ratio: 1 / 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.stars {
    color: {{ section.settings.star_color }};
    margin-bottom: 20px;
    font-size: 1.2rem;
}

.testimonial-card > p:first-of-type {
    font-style: italic;
    margin-bottom: 15px;
    color: #D1D5DB;
    font-size: 1.1rem;
    line-height: 1.6;
    font-weight: 600;
}

.testimonial-detail {
    font-size: 1rem;
    color: #9CA3AF;
    margin-bottom: 25px;
    line-height: 1.6;
}

.testimonial-card h4 {
    font-family: var(--font-heading-family);
    color: {{ section.settings.author_color }};
    text-transform: uppercase;
    font-size: 1.1rem;
    margin: 0;
}

/* Splide Overrides */
.testimonials-section .splide__pagination__page.is-active {
    background: {{ section.settings.pagination_active_color }};
    transform: scale(1.2);
}

.testimonials-section .splide__pagination__page {
    background: #555;
}

.testimonials-section .splide__arrow {
    background: {{ section.settings.arrow_color }};
    opacity: 1;
}

.testimonials-section .splide__arrow:hover {
    background: {{ section.settings.arrow_hover_color }};
}

.testimonials-section .splide__arrow svg {
    fill: white;
}

@media (max-width: 768px) {
    .testimonials-section {
        padding: 60px 0;
    }
    
    .testimonial-card {
        padding: 30px;
    }
}
</style>

<section class="testimonials-section">
    <div class="page-width">
        <h2 class="section-title">{{ section.settings.section_title }}</h2>

        <div class="splide" aria-label="Customer Testimonials">
            <div class="splide__track">
                <ul class="splide__list">
                    {% for block in section.blocks %}
                      {% case block.type %}
                        {% when 'testimonial' %}
                          <li class="splide__slide" {{ block.shopify_attributes }}>
                              <div class="testimonial-card">
                                  <div class="stars">
                                      {% for i in (1..block.settings.star_rating) %}
                                        <i class="fas fa-star"></i>
                                      {% endfor %}
                                  </div>
                                  <p>{{ block.settings.testimonial_title }}</p>
                                  <p class="testimonial-detail">{{ block.settings.testimonial_text }}</p>
                                  <h4>{{ block.settings.author_name }}</h4>
                              </div>
                          </li>
                      {% endcase %}
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</section>

<!-- Splide JS -->
<script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js"></script>

<script>
(function() {
    if (document.querySelector('.testimonials-section .splide')) {
        new Splide('.testimonials-section .splide', {
            type: 'loop',
            perPage: 3,
            perMove: 1,
            gap: '2rem',
            autoplay: {{ section.settings.autoplay }},
            interval: {{ section.settings.autoplay_interval | times: 1000 }},
            speed: 800,
            breakpoints: {
                992: {
                    perPage: 2,
                },
                768: {
                    perPage: 1,
                }
            }
        }).mount();
    }
})();
</script>

