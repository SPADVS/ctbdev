      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Custom Font Override",
      "blocks": [
        {
          "type": "font_override",
          "settings": {
            "target_elements": "h1,h2,h3,h4,h5,h6"
          }
        }
      ]
    }
  ]
}
