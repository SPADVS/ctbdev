<style>
/* Floating Call Button */
.floating-call-btn {
    position: fixed;
    {% if section.settings.position_desktop == 'left' %}
    left: 22px;
    right: auto;
    {% elsif section.settings.position_desktop == 'center' %}
    left: 50%;
    right: auto;
    transform: translateX(-50%) translateY(100px);
    {% else %}
    right: 22px;
    left: auto;
    {% endif %}
    bottom: 40px;
    display: flex;
    align-items: center;
    gap: 10px;
    background: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    padding: 16px 32px;
    {% if section.settings.button_height_desktop > 0 %}
    min-height: {{ section.settings.button_height_desktop }}px;
    {% endif %}
    border-radius: 50px;
    font-weight: 800;
    text-transform: uppercase;
    font-size: {% if section.settings.button_text_size_desktop > 0 %}{{ section.settings.button_text_size_desktop }}px{% else %}0.9rem{% endif %};
    letter-spacing: 1.5px;
    box-shadow: 0 8px 30px rgba(255, 255, 255, 0.5), 0 0 20px rgba(255, 255, 255, 0.2);
    z-index: 1100;
    opacity: 0;
    {% if section.settings.position_desktop != 'center' %}
    transform: translateY(100px);
    {% endif %}
    pointer-events: none;
    transition: opacity .35s ease, transform .35s ease, background .3s ease, box-shadow .3s ease;
    border: 2px solid transparent;
    cursor: pointer;
    {% if section.settings.button_width_desktop > 0 %}
    width: {{ section.settings.button_width_desktop }}%;
    max-width: calc({{ section.settings.button_width_desktop }}% - 44px);
    {% endif %}
}

.floating-call-btn.show {
    opacity: 1;
    {% if section.settings.position_desktop == 'center' %}
    transform: translateX(-50%) translateY(0);
    {% else %}
    transform: translateY(0);
    {% endif %}
    pointer-events: auto;
}

.floating-call-btn i { 
    font-size: {% if section.settings.button_text_size_desktop > 0 %}{{ section.settings.button_text_size_desktop }}px{% else %}1rem{% endif %};
}

.floating-call-btn.icon-after {
    flex-direction: row-reverse;
}

.floating-call-btn:hover {
    background: #ffffff;
    box-shadow: 0 12px 35px rgba(255, 255, 255, 0.7), 0 0 30px rgba(255, 255, 255, 0.4);
    {% if section.settings.position_desktop == 'center' %}
    transform: translateX(-50%) translateY(-2px);
    {% else %}
    transform: translateY(-2px);
    {% endif %}
}

.floating-call-btn:focus {
    outline: 2px solid #fff;
    outline-offset: 3px;
}

/* Mobile only option */
.floating-call-btn.mobile-only {
    display: none;
}

@media (max-width: 600px) {
    .floating-call-btn {
        {% if section.settings.position_mobile == 'left' %}
        left: 12px;
        right: auto;
        transform: translateY(100px);
        {% elsif section.settings.position_mobile == 'center' %}
        left: 50%;
        right: auto;
        transform: translateX(-50%) translateY(100px);
        {% else %}
        right: 12px;
        left: auto;
        transform: translateY(100px);
        {% endif %}
        {% if section.settings.button_width_mobile > 0 %}
        width: {{ section.settings.button_width_mobile }}%;
        max-width: calc({{ section.settings.button_width_mobile }}% - 24px);
        {% endif %}
        bottom: 30px;
        {% if section.settings.button_height_mobile > 0 %}
        min-height: {{ section.settings.button_height_mobile }}px;
        {% endif %}
        border-radius: 14px;
        justify-content: center;
        font-size: {% if section.settings.button_text_size_mobile > 0 %}{{ section.settings.button_text_size_mobile }}px{% else %}0.9rem{% endif %};
        padding: 16px 20px;
        letter-spacing: 1.5px;
    }
    .floating-call-btn.show {
        {% if section.settings.position_mobile == 'center' %}
        transform: translateX(-50%) translateY(0);
        {% else %}
        transform: translateY(0);
        {% endif %}
    }
    .floating-call-btn:hover {
        {% if section.settings.position_mobile == 'center' %}
        transform: translateX(-50%) translateY(-2px);
        {% else %}
        transform: translateY(-2px);
        {% endif %}
    }
    .floating-call-btn i { 
        font-size: {% if section.settings.button_text_size_mobile > 0 %}{{ section.settings.button_text_size_mobile }}px{% else %}1.1rem{% endif %};
    }
    
    .floating-call-btn.mobile-only {
        display: flex;
    }
}

/* Tickets Modal */
.tickets-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 10000;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
}

.tickets-modal.active {
    opacity: 1;
    visibility: visible;
}

.modal-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.9);
    backdrop-filter: blur(5px);
}

.modal-content {
    position: relative;
    max-width: 1200px;
    max-height: 90vh;
    margin: 5vh auto;
    background: #0a0a0a;
    border: 2px solid {{ section.settings.modal_border_color }};
    border-radius: 12px;
    padding: 50px 40px;
    overflow-y: auto;
    box-shadow: 0 10px 50px rgba(255, 255, 255, 0.3);
    transform: translateY(-30px);
    transition: transform 0.3s ease;
}

.tickets-modal.active .modal-content {
    transform: translateY(0);
}

.modal-close {
    position: absolute;
    top: 15px;
    right: 15px;
    background: rgba(0, 0, 0, 0.8);
    border: 2px solid {{ section.settings.modal_border_color }};
    color: {{ section.settings.modal_border_color }};
    width: 45px;
    height: 45px;
    border-radius: 50%;
    cursor: pointer;
    font-size: 1.5rem;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 15px rgba(255, 255, 255, 0.3);
    z-index: 10;
}

.modal-close:hover {
    background: {{ section.settings.modal_border_color }};
    color: #000;
    transform: rotate(90deg) scale(1.1);
    box-shadow: 0 6px 20px rgba(255, 255, 255, 0.5);
}

.modal-content h2 {
    font-family: var(--font-heading-family);
    font-size: 2.5rem;
    text-align: center;
    color: {{ section.settings.modal_border_color }};
    margin-bottom: 15px;
    text-transform: uppercase;
    text-shadow: 0 2px 15px rgba(255, 255, 255, 0.4);
}

.modal-intro {
    text-align: center;
    font-size: 1.1rem;
    color: #9CA3AF;
    margin-bottom: 40px;
}

.modal-tickets {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    margin-bottom: 40px;
}

.modal-ticket-card {
    background: #000;
    border: 2px solid {{ section.settings.modal_border_color }};
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(255, 255, 255, 0.1);
}

.modal-ticket-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(255, 255, 255, 0.3);
}

.modal-ticket-image {
    width: 100%;
    overflow: hidden;
}

.modal-ticket-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
}

.modal-ticket-card:hover .modal-ticket-image img {
    transform: scale(1.1);
}

.modal-ticket-info {
    padding: 25px;
}

.modal-ticket-info h3 {
    font-family: var(--font-heading-family);
    font-size: 1.5rem;
    color: #ffffff;
    margin-bottom: 15px;
    text-transform: uppercase;
}

.modal-ticket-info > p {
    color: #9CA3AF;
    line-height: 1.6;
    margin-bottom: 20px;
    font-size: 0.95rem;
}

.ticket-details {
    margin-bottom: 20px;
    padding: 15px;
    background: rgba(255, 255, 255, 0.02);
    border-radius: 6px;
    border-left: 3px solid {{ section.settings.modal_border_color }};
}

.ticket-details p {
    color: #D1D5DB;
    margin-bottom: 8px;
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 0.9rem;
}

.ticket-details p:last-child {
    margin-bottom: 0;
}

.ticket-details i {
    color: {{ section.settings.modal_border_color }};
    width: 20px;
}

.modal-ticket-info .btn {
    width: 100%;
    margin-top: 10px;
    display: inline-block;
    padding: 12px 24px;
    background: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    border-radius: 4px;
    text-align: center;
    font-weight: 700;
    text-transform: uppercase;
    transition: all 0.3s ease;
}

.modal-ticket-info .btn:hover {
    background: #ffffff;
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(255, 255, 255, 0.4);
}

.modal-footer-text {
    text-align: center;
    color: #9CA3AF;
    font-size: 0.95rem;
    padding-top: 20px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.modal-footer-text a {
    color: {{ section.settings.modal_border_color }};
    font-weight: bold;
    text-decoration: underline;
}

.modal-footer-text a:hover {
    color: #e0e0e0;
}

@media (max-width: 768px) {
    .modal-content {
        margin: 2vh auto;
        padding: 40px 20px;
        max-height: 96vh;
    }
    
    .modal-content h2 {
        font-size: 2rem;
    }
    
    .modal-tickets {
        grid-template-columns: 1fr;
        gap: 20px;
    }
