<!-- Floating Button (Tickets or Call) -->
{% if section.settings.button_type == 'call' %}
  <a href="tel:{{ section.settings.phone_number }}" class="floating-call-btn{% if section.settings.mobile_only %} mobile-only{% endif %}{% if section.settings.icon_position == 'after' %} icon-after{% endif %}" aria-label="Call Now">
    <i class="fas fa-{{ section.settings.button_icon }}"></i>
    <span>{{ section.settings.button_text }}</span>
  </a>
{% else %}
  <button class="floating-call-btn{% if section.settings.mobile_only %} mobile-only{% endif %}{% if section.settings.icon_position == 'after' %} icon-after{% endif %}" id="ticketsBtn" aria-label="Get Event Tickets">
    <i class="fas fa-{{ section.settings.button_icon }}"></i>
    <span>{{ section.settings.button_text }}</span>
  </button>
{% endif %}

<!-- Tickets Modal (only shown if button_type is tickets) -->
{% if section.settings.button_type == 'tickets' %}
<div class="tickets-modal" id="ticketsModal">
    <div class="modal-overlay"></div>
    <div class="modal-content">
        <button class="modal-close" id="closeModal">
            <i class="fas fa-times"></i>
        </button>
        <h2>{{ section.settings.modal_title }}</h2>
        <p class="modal-intro">{{ section.settings.modal_intro }}</p>

        <div class="modal-tickets">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'ticket' %}
                  <div class="modal-ticket-card" {{ block.shopify_attributes }}>
                      <div class="modal-ticket-image">
                          {% if block.settings.ticket_image %}
                            <img src="{{ block.settings.ticket_image | image_url: width: 600 }}" alt="{{ block.settings.ticket_title }}">
                          {% endif %}
                      </div>
                      <div class="modal-ticket-info">
                          <h3>{{ block.settings.ticket_title }}</h3>
                          <p>{{ block.settings.ticket_description }}</p>
                          <div class="ticket-details">
                              <p><i class="fas fa-calendar"></i> {{ block.settings.ticket_date }}</p>
                              <p><i class="fas fa-map-marker-alt"></i> {{ block.settings.ticket_location }}</p>
                              <p><i class="fas fa-tag"></i> {{ block.settings.ticket_price }}</p>
                          </div>
                          <a href="{{ block.settings.ticket_link }}" target="_blank" class="btn">{{ block.settings.button_text }}</a>
                      </div>
                  </div>
              {% endcase %}
            {% endfor %}
        </div>

        <p class="modal-footer-text">{{ section.settings.modal_footer }}</p>
    </div>
</div>
{% endif %}

<script>
(function() {
    const buttonType = '{{ section.settings.button_type }}';
    const scrollThreshold = {{ section.settings.scroll_threshold | default: 100 }};
    const hideInHero = {{ section.settings.hide_in_hero | default: true }};
    const hideInFooter = {{ section.settings.hide_in_footer | default: false }};
    const hideInSections = '{{ section.settings.hide_in_sections }}'.split(',').map(s => s.trim()).filter(s => s);
    
    // Only run modal logic if in tickets mode
    if (buttonType !== 'tickets') {
        // For call button, just show it on scroll
        const callBtn = document.querySelector('.floating-call-btn');
        if (callBtn && !callBtn.classList.contains('show')) {
            function handleScroll() {
                let shouldShow = true;
                
                // Check scroll threshold
                if (window.scrollY < scrollThreshold) {
                    shouldShow = false;
                }
                
                // Check if in hero section
                if (hideInHero && shouldShow) {
                    const heroSection = document.querySelector('.hero-wrapper, [class*="hero"]');
                    if (heroSection) {
                        const heroBottom = heroSection.offsetTop + heroSection.offsetHeight;
                        const scrollPosition = window.scrollY + window.innerHeight;
                        if (scrollPosition <= heroBottom) {
                            shouldShow = false;
                        }
                    }
                }
                
                // Check if in footer section
                if (hideInFooter && shouldShow) {
                    const footer = document.querySelector('footer, .footer, [class*="footer"]');
                    if (footer) {
                        const footerTop = footer.offsetTop;
                        const scrollPosition = window.scrollY + window.innerHeight;
                        if (scrollPosition >= footerTop) {
                            shouldShow = false;
                        }
                    }
                }
                
                // Check custom sections
                if (hideInSections.length > 0 && shouldShow) {
                    for (let sectionId of hideInSections) {
                        const section = document.querySelector('#' + sectionId + ', .' + sectionId);
                        if (section) {
                            const rect = section.getBoundingClientRect();
                            if (rect.top <= window.innerHeight && rect.bottom >= 0) {
                                shouldShow = false;
                                break;
                            }
                        }
                    }
                }
                
                if (shouldShow) {
                    callBtn.classList.add('show');
                } else {
                    callBtn.classList.remove('show');
                }
            }
            handleScroll();
            let ticking = false;
            window.addEventListener('scroll', function() {
                if (!ticking) {
                    window.requestAnimationFrame(function() {
                        handleScroll();
                        ticking = false;
                    });
                    ticking = true;
                }
            });
        }
        return;
    }
    
    const ticketsBtn = document.getElementById('ticketsBtn');
    const ticketsModal = document.getElementById('ticketsModal');
    const closeModal = document.getElementById('closeModal');
    const modalOverlay = document.querySelector('.modal-overlay');

    if (ticketsBtn && ticketsModal) {
        // Show/hide button based on scroll position
        function handleScroll() {
            let shouldShow = true;
            
            // Check scroll threshold
            if (window.scrollY < scrollThreshold) {
                shouldShow = false;
            }
            
            // Check if in hero section
            if (hideInHero && shouldShow) {
                const heroSection = document.querySelector('.hero-wrapper, [class*="hero"]');
                if (heroSection) {
                    const heroBottom = heroSection.offsetTop + heroSection.offsetHeight;
                    const scrollPosition = window.scrollY + window.innerHeight;
                    if (scrollPosition <= heroBottom) {
                        shouldShow = false;
                    }
                }
            }
            
            // Check if in footer section
            if (hideInFooter && shouldShow) {
                const footer = document.querySelector('footer, .footer, [class*="footer"]');
                if (footer) {
                    const footerTop = footer.offsetTop;
                    const scrollPosition = window.scrollY + window.innerHeight;
                    if (scrollPosition >= footerTop) {
                        shouldShow = false;
                    }
                }
            }
            
            // Check custom sections
            if (hideInSections.length > 0 && shouldShow) {
                for (let sectionId of hideInSections) {
                    const section = document.querySelector('#' + sectionId + ', .' + sectionId);
                    if (section) {
                        const rect = section.getBoundingClientRect();
                        if (rect.top <= window.innerHeight && rect.bottom >= 0) {
                            shouldShow = false;
                            break;
                        }
                    }
                }
            }
            
            if (shouldShow) {
                ticketsBtn.classList.add('show');
            } else {
                ticketsBtn.classList.remove('show');
            }
        }

        // Initial check
        handleScroll();

        // Listen for scroll events with throttling for performance
        let ticking = false;
        window.addEventListener('scroll', function() {
            if (!ticking) {
                window.requestAnimationFrame(function() {
                    handleScroll();
                    ticking = false;
                });
                ticking = true;
            }
        });

        // Open modal
        ticketsBtn.addEventListener('click', function() {
            ticketsModal.classList.add('active');
            document.body.style.overflow = 'hidden';
        });

        // Close modal - close button
        if (closeModal) {
            closeModal.addEventListener('click', function() {
                ticketsModal.classList.remove('active');
                document.body.style.overflow = '';
            });
        }

        // Close modal - overlay click
        if (modalOverlay) {
            modalOverlay.addEventListener('click', function() {
                ticketsModal.classList.remove('active');
                document.body.style.overflow = '';
            });
        }

        // Close modal - escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && ticketsModal.classList.contains('active')) {
                ticketsModal.classList.remove('active');
                document.body.style.overflow = '';
            }
        });
    }
})();
</script> 

