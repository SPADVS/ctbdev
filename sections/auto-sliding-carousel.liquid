{% stylesheet %}
  .auto-slider {
    background: #0b0b0b;
    padding: 80px 20px;
    color: #f5f5f5;
  }

  .auto-slider__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .auto-slider__heading {
    text-align: center;
    font-size: 3rem;
    font-weight: 800;
    margin: 0 0 60px 0;
    color: #f5d76e;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .auto-slider .splide__slide {
    padding: 0 20px;
  }

  .auto-slider__item {
    background: linear-gradient(135deg, #1a1a1a 0%, #252525 100%);
    border: 1px solid #333;
    border-radius: 16px;
    padding: 60px 40px;
    text-align: center;
    min-height: 350px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 1.5rem;
    transition: all 0.3s ease;
  }

  .auto-slider__item:hover {
    border-color: #f5d76e;
    transform: translateY(-5px);
    box-shadow: 0 10px 40px rgba(245, 215, 110, 0.1);
  }

  .auto-slider__item h3 {
    color: #f5d76e;
    font-size: 1.8rem;
    margin: 0;
    font-weight: 700;
  }

  .auto-slider__item h1,
  .auto-slider__item h2,
  .auto-slider__item h4,
  .auto-slider__item h5,
  .auto-slider__item h6 {
    color: #f5d76e;
    font-size: 1.8rem;
    margin: 0;
    font-weight: 700;
  }

  .auto-slider__item p {
    color: #b0b0b0;
    font-size: 1.1rem;
    margin: 0;
    line-height: 1.6;
  }

  .auto-slider .splide__pagination {
    bottom: -50px;
  }

  .auto-slider .splide__pagination__page {
    background: rgba(255, 255, 255, 0.2);
    width: 12px;
    height: 12px;
  }

  .auto-slider .splide__pagination__page.is-active {
    background: #f5d76e;
    width: 40px;
    border-radius: 6px;
  }

  .auto-slider .splide__arrow {
    background: rgba(245, 215, 110, 0.15);
    border: 2px solid #f5d76e;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    top: 50%;
    transform: translateY(-50%);
  }

  .auto-slider .splide__arrow:hover:not(:disabled) {
    background: #f5d76e;
  }

  .auto-slider .splide__arrow svg {
    fill: #f5d76e;
  }

  .auto-slider .splide__arrow:hover:not(:disabled) svg {
    fill: #0b0b0b;
  }

  @media (max-width: 768px) {
    .auto-slider {
      padding: 40px 15px;
    }

    .auto-slider__heading {
      font-size: 2rem;
      margin: 0 0 40px 0;
    }

    .auto-slider__item {
      padding: 40px 25px;
      min-height: 280px;
    }

    .auto-slider .splide__arrow {
      width: 40px;
      height: 40px;
    }
  }
{% endstylesheet %}

{% javascript %}
document.addEventListener('DOMContentLoaded', function() {
  const carouselElement = document.querySelector('#auto-carousel-{{ section.id }}');
  
  if (!carouselElement || typeof Splide === 'undefined') {
    console.warn('Splide carousel not ready');
    return;
  }

  const slidesList = carouselElement.querySelector('.splide__list');
  const originalSlides = slidesList.querySelectorAll('.splide__slide');
  const slideCount = originalSlides.length;
  const perPage = {{ section.settings.items_per_page }};
  const fewSlidesBehavior = '{{ section.settings.few_slides_behavior }}';
  
  let carouselType = 'loop';
  let enableAutoplay = true;
  
  // Handle cases where there are fewer slides than perPage
  if (slideCount <= perPage) {
    if (fewSlidesBehavior === 'duplicate') {
      // Duplicate slides until we have enough for smooth looping
      const slidesNeeded = perPage + 2; // Add extra for smooth infinite loop
      let duplicateCount = 0;
      
      while (slidesList.children.length < slidesNeeded && duplicateCount < 20) {
        originalSlides.forEach(slide => {
          const clone = slide.cloneNode(true);
          slidesList.appendChild(clone);
        });
        duplicateCount++;
      }
    } else if (fewSlidesBehavior === 'disable_loop') {
      // Use slide type instead of loop
      carouselType = 'slide';
      enableAutoplay = false;
    }
    // 'keep_loop' option keeps loop type even with few slides
  }

  const splide = new Splide(carouselElement, {
    type: carouselType,
    perPage: perPage,
    gap: '{{ section.settings.gap }}',
    autoplay: enableAutoplay ? {
      interval: {{ section.settings.autoplay_speed }},
      pauseOnHover: {{ section.settings.pause_on_hover | json }},
      pauseOnFocus: {{ section.settings.pause_on_focus | json }}
    } : false,
    speed: {{ section.settings.transition_speed }},
    easing: '{{ section.settings.easing }}',
    arrows: {{ section.settings.show_arrows | json }},
    pagination: {{ section.settings.show_pagination | json }},
    drag: {{ section.settings.enable_drag | json }},
    keyboard: {{ section.settings.enable_keyboard | json }},
    wheel: {{ section.settings.enable_wheel | json }},
    waitForTransition: {{ section.settings.wait_for_transition | json }},
    breakpoints: {
      1024: { 
        perPage: {% if section.settings.items_per_page > 2 %}2{% else %}{{ section.settings.items_per_page }}{% endif %}
      },
      768: { 
        perPage: 1
      }
    }
  });

  splide.mount();
});
{% endjavascript %}

<section class="auto-slider">
  <div class="auto-slider__container">
    {% if section.settings.heading %}
      {% assign heading_tag = section.settings.heading_tag | default: 'h2' %}
      <{{ heading_tag }} class="auto-slider__heading">{{ section.settings.heading }}</{{ heading_tag }}>
    {% endif %}

    <div id="auto-carousel-{{ section.id }}" class="splide">
      <div class="splide__track">
        <ul class="splide__list">
          {% for block in section.blocks %}
            <li class="splide__slide">
              <div class="auto-slider__item">
                {% assign slide_heading_tag = block.settings.title_tag | default: 'h3' %}
                <{{ slide_heading_tag }}>{{ block.settings.title }}</{{ slide_heading_tag }}>
                <p>{{ block.settings.description }}</p>
              </div>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</section>

