{% stylesheet %}
  .auto-slider {
    background: #0b0b0b;
    padding: 80px 20px;
    color: #f5f5f5;
  }

  .auto-slider__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .auto-slider__heading {
    text-align: center;
    font-size: 3rem;
    font-weight: 800;
    margin: 0 0 60px 0;
    color: #f5d76e;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .auto-slider .splide__slide {
    padding: 0 20px;
  }

  .auto-slider__item {
    background: linear-gradient(135deg, #1a1a1a 0%, #252525 100%);
    border: 1px solid #333;
    border-radius: 16px;
    padding: 60px 40px;
    text-align: center;
    min-height: 350px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 1.5rem;
    transition: all 0.3s ease;
  }

  .auto-slider__item:hover {
    border-color: #f5d76e;
    transform: translateY(-5px);
    box-shadow: 0 10px 40px rgba(245, 215, 110, 0.1);
  }

  .auto-slider__item h3 {
    color: #f5d76e;
    font-size: 1.8rem;
    margin: 0;
    font-weight: 700;
  }

  .auto-slider__item p {
    color: #b0b0b0;
    font-size: 1.1rem;
    margin: 0;
    line-height: 1.6;
  }

  .auto-slider .splide__pagination {
    bottom: -50px;
  }

  .auto-slider .splide__pagination__page {
    background: rgba(255, 255, 255, 0.2);
    width: 12px;
    height: 12px;
  }

  .auto-slider .splide__pagination__page.is-active {
    background: #f5d76e;
    width: 40px;
    border-radius: 6px;
  }

  .auto-slider .splide__arrow {
    background: rgba(245, 215, 110, 0.15);
    border: 2px solid #f5d76e;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    top: 50%;
    transform: translateY(-50%);
  }

  .auto-slider .splide__arrow:hover:not(:disabled) {
    background: #f5d76e;
  }

  .auto-slider .splide__arrow svg {
    fill: #f5d76e;
  }

  .auto-slider .splide__arrow:hover:not(:disabled) svg {
    fill: #0b0b0b;
  }

  @media (max-width: 768px) {
    .auto-slider {
      padding: 40px 15px;
    }

    .auto-slider__heading {
      font-size: 2rem;
      margin: 0 0 40px 0;
    }

    .auto-slider__item {
      padding: 40px 25px;
      min-height: 280px;
    }

    .auto-slider .splide__arrow {
      width: 40px;
      height: 40px;
    }
  }
{% endstylesheet %}

{% javascript %}
document.addEventListener('DOMContentLoaded', function() {
  const carouselElement = document.querySelector('#auto-carousel-{{ section.id }}');
  
  if (!carouselElement || typeof Splide === 'undefined') {
    console.warn('Splide carousel not ready');
    return;
  }

  const splide = new Splide(carouselElement, {
    type: 'loop',
    perPage: {{ section.settings.items_per_page }},
    gap: '2rem',
    autoplay: {
      interval: {{ section.settings.autoplay_speed }},
      pause: 'hover'
    },
    speed: 800,
    arrows: {{ section.settings.show_arrows | json }},
    pagination: {{ section.settings.show_pagination | json }},
    breakpoints: {
      1024: { 
        perPage: {% if section.settings.items_per_page > 2 %}2{% else %}{{ section.settings.items_per_page }}{% endif %}
      },
      768: { 
        perPage: 1
      }
    }
  });

  splide.mount();
});
{% endjavascript %}

<section class="auto-slider">
  <div class="auto-slider__container">
    {% if section.settings.heading %}
      <h2 class="auto-slider__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div id="auto-carousel-{{ section.id }}" class="splide">
      <div class="splide__track">
        <ul class="splide__list">
          {% for block in section.blocks %}
            <li class="splide__slide">
              <div class="auto-slider__item">
                <h3>{{ block.settings.title }}</h3>
                <p>{{ block.settings.description }}</p>
              </div>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</section>

