      "default": "Featured Products"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "trigger_color",
      "label": "Trigger button background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent color",
      "default": "#FFD700"
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon color",
      "default": "#FFD700"
    },
    {
      "type": "color",
      "id": "panel_background",
      "label": "Panel background",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "header_background",
      "label": "Header background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Simple Floating Products",
      "category": "Custom"
    }
  ]
}
{% endschema %}
