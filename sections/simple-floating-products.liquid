{% comment %}
  Simple Floating Products - A popup panel showing featured products
{% endcomment %}

<style>
  .floating-products {
    position: fixed;
    bottom: 20px;
    right: 20px;
    z-index: 1000;
  }
  
  .floating-trigger {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: {{ section.settings.trigger_color }};
    border: 2px solid {{ section.settings.accent_color }};
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .floating-trigger:hover {
    transform: scale(1.1);
    box-shadow: 0 6px 30px rgba(0, 0, 0, 0.4);
  }
  
  .floating-trigger i {
    font-size: 24px;
    color: {{ section.settings.icon_color }};
  }
  
  .floating-panel {
    position: fixed;
    bottom: 100px;
    right: 20px;
    width: 350px;
    max-height: 500px;
    background: {{ section.settings.panel_background }};
    border: 2px solid {{ section.settings.accent_color }};
    border-radius: 12px;
    box-shadow: 0 8px 40px rgba(0, 0, 0, 0.5);
    overflow: hidden;
    opacity: 0;
    transform: translateY(20px);
    pointer-events: none;
    transition: opacity 0.3s ease, transform 0.3s ease;
  }
  
  .floating-panel.active {
    opacity: 1;
    transform: translateY(0);
    pointer-events: all;
  }
  
  .floating-panel-header {
    padding: 16px;
    background: {{ section.settings.header_background }};
    border-bottom: 1px solid {{ section.settings.accent_color }};
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .floating-panel-title {
    font-size: 18px;
    font-weight: 700;
    color: {{ section.settings.heading_color }};
    margin: 0;
  }
  
  .floating-close {
    background: none;
    border: none;
    color: {{ section.settings.text_color }};
    font-size: 24px;
    cursor: pointer;
    padding: 0;
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s ease;
  }
  
  .floating-close:hover {
    transform: rotate(90deg);
  }
  
  .floating-products-list {
    padding: 16px;
    max-height: 400px;
    overflow-y: auto;
  }
  
  .floating-product-item {
    display: flex;
    gap: 12px;
    padding: 12px;
    margin-bottom: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    transition: background 0.2s ease;
  }
  
  .floating-product-item:hover {
    background: rgba(255, 255, 255, 0.05);
  }
  
  .floating-product-image {
    width: 80px;
    height: 80px;
    border-radius: 6px;
    overflow: hidden;
    flex-shrink: 0;
  }
  
  .floating-product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .floating-product-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 4px;
  }
  
  .floating-product-title {
    font-size: 14px;
    font-weight: 600;
    color: {{ section.settings.text_color }};
    margin: 0;
    line-height: 1.3;
  }
  
  .floating-product-price {
    font-size: 16px;
    font-weight: 700;
    color: {{ section.settings.accent_color }};
  }
  
  .floating-product-button {
    padding: 6px 12px;
    background: {{ section.settings.accent_color }};
    color: #000;
    border: none;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 600;
    cursor: pointer;
    transition: opacity 0.2s ease;
    text-transform: uppercase;
  }
  
  .floating-product-button:hover {
    opacity: 0.8;
  }
  
  @media (max-width: 768px) {
    .floating-panel {
      width: calc(100vw - 40px);
      right: 20px;
    }
  }
</style>

<div class="floating-products">
  <button class="floating-trigger" type="button">
    <i class="fas fa-shopping-bag"></i>
  </button>
  
  <div class="floating-panel">
    <div class="floating-panel-header">
      <h3 class="floating-panel-title">{{ section.settings.heading }}</h3>
      <button class="floating-close" type="button">
        <i class="fas fa-times"></i>
      </button>
    </div>
    
    <div class="floating-products-list">
      {% for block in section.blocks %}
        {% if block.type == 'product' and block.settings.product != blank %}
          {% assign product = block.settings.product %}
          <div class="floating-product-item">
            <div class="floating-product-image">
              {% if product.featured_image %}
                <img src="{{ product.featured_image | image_url: width: 160 }}" alt="{{ product.title }}">
              {% else %}
                <div style="background: #333; width: 100%; height: 100%;"></div>
              {% endif %}
            </div>
            <div class="floating-product-info">
              <h4 class="floating-product-title">{{ product.title }}</h4>
              <div class="floating-product-price">{{ product.price | money }}</div>
              <a href="{{ product.url }}" class="floating-product-button">View</a>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const trigger = document.querySelector('.floating-trigger');
    const panel = document.querySelector('.floating-panel');
    const closeBtn = document.querySelector('.floating-close');
    
    if (trigger && panel) {
      trigger.addEventListener('click', function() {
        panel.classList.toggle('active');
      });
      
      if (closeBtn) {
        closeBtn.addEventListener('click', function() {
          panel.classList.remove('active');
        });
      }
      
      // Close when clicking outside
      document.addEventListener('click', function(e) {
        if (!e.target.closest('.floating-products')) {
          panel.classList.remove('active');
        }
      });
    }
  });
</script>

