{% stylesheet %}
  .ctb-hero-features {
    background: {{ section.settings.background_color }};
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px 0;
  }

  .hero-features {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .hero-features li {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 1rem;
    font-weight: 500;
    color: {{ section.settings.text_color }};
    animation: fadeInUp 0.6s ease-out forwards;
  }

  .hero-features li i {
    color: {{ section.settings.icon_color }};
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  .hero-features li a {
    color: {{ section.settings.link_color }};
    text-decoration: none;
    font-weight: 600;
  }

  .hero-features li a:hover {
    text-decoration: underline;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .ctb-hero-features {
      padding: calc({{ section.settings.padding_top }}px * 0.75) calc({{ section.settings.padding_bottom }}px * 0.75);
    }

    .hero-features {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .hero-features li {
      font-size: 0.95rem;
    }
  }
{% endstylesheet %}

<div class="ctb-hero-features">
  <div class="container">
    <ul class="hero-features">
      {% for block in section.blocks %}
        <li>
          {% if block.settings.icon_class != blank %}
            <i class="{{ block.settings.icon_class }}"></i>
          {% endif %}
          <span>
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}">{{ block.settings.text }}</a>
            {% else %}
              {{ block.settings.text }}
            {% endif %}
          </span>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>

{% schema %}
{
  "name": "CTB Hero Features",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#0b0b0b"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#f5f5f5"
    },
