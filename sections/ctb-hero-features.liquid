      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Padding Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 20,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "icon_class",
          "label": "Icon Class (Font Awesome)",
          "default": "fas fa-check"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Feature Text",
          "default": "Feature text here"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (optional)"
        }
      ]
    }
  ],
